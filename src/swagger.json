{
  "openapi": "3.0.0",
  "info": {
    "title": "Itinerario Formativo: Se liga na mídia",
    "description": "Documentação da api do itinerario formativo: se liga na midia realizado pelos alunos da escola Adherbal de Paula ferreira, localizada em Itapetininga - SP",
    "version": "1.0.0",
    "contact": {
      "email": "gustavorafael@gmail.com"
    }
  },

  "servers": [
    {
      "url": "http://localhost:3000/",
      "description": "Rota de desenvolvimento"
    }
  ],

  "paths": {
    "/login": {
      "post": {
        "summary": "Logar o usuario logado",
        "description": "Retorna o token de um usuario",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              },
              "examples": {
                "Users": {
                  "value": {
                    "email": "user@gmail.com",
                    "password": "123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "A rota retornou o token de login do usuario com sucesso - OK"
          },
          "400": {
            "description": "Credenciais invalidas"
          },
          "500": {
            "description": "Erro no codigo!!"
          }
        }
      }
    },
    "/users": {
      "get": {
        "summary": "Usuarios cadastrados",
        "description": "Retorna todos os usuarios cadastrados",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "init",
            "in": "query",
            "description": "Valor inicial a ser retornado",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Quantidade de registros a serem retornados",
            "required": false,
            "schema": {
              "type": "integer",
              "format": "int32"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "A Rota retornou todos os usuarios com sucesso - OK"
          },
          "500": {
            "description": "Houve um erro ao tentar buscar os usuarios"
          },
          "401": {
            "description": "Token invalido ou não autorizado"
          }
        }
      },
      "post": {
        "summary": "Cadastrar um novo usuario",
        "description": "Cadastra um usuario no banco de dados",
        "tags": ["Users"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              },
              "examples": {
                "Users": {
                  "value": {
                    "name": "João Almeia da Silva",
                    "email": "Joaozinho@email.com",
                    "password": "Joaozinho0532"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Usuario cadastrado com sucesso - Created"
          },
          "400": {
            "description": "Caracteres invalidos - Bad Request"
          },
          "504": {
            "description": "Erro ao tentar cadastrar - Gateway Timeout"
          }
        }
      },
      "put": {
        "summary": "Atualizar usuario",
        "description": "Atualiza o email e nome do usuario no banco de dados",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Users"
              },
              "examples": {
                "Users": {
                  "value": {
                    "name": "João Almeia de pontes",
                    "email": "Joaozinho@devTeste.com"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "403": {
            "description": "Token invalido ou não autorizado"
          },
          "200": {
            "description": "Dados atualizados"
          },
          "400": {
            "description": "O usuario inseriu dados invalidos"
          },
          "500": {
            "description": "Erro do servidor!!"
          }
        }
      },
      "delete": {
        "summary": "Deletar usuario",
        "description": "Deleta os dados de um usuario no banco de dados",
        "tags": ["Users"],
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["password"]
              },
              "examples": {
                "password": {
                  "value": {
                    "password": "123"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "403": {
            "description": "Token invalido ou não autorizado"
          },
          "200": {
            "description": "Dados atualizados"
          },
          "404": {
            "description": "O usuario inseriu dados invalidos"
          }
        }
      }
    },
    "/users/{id}": {
      "get": {
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "summary": "Apenas um usuario cadastrado",
        "description": "Retorna apenas um usuario cadastrado",
        "security": [{ "bearerAuth": [] }],
        "tags": ["Users"],
        "responses": {
          "200": {
            "description": "A rota retornou apenas um usuario com sucesso - OK"
          }
        }
      }
    }
  },

  "components": {
    "schemas": {
      "Users": {
        "type": "object",
        "properties": {
          "name": {
            "type": "String"
          },
          "email": {
            "type": "String"
          },
          "password": {
            "type": "String"
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
